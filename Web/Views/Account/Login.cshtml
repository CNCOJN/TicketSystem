@{
    ViewData["Title"] = "Log In";
}

@section Styles
{
<style>
    .flex-container {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .flex-container__header {
        margin-bottom: 1.5rem;
        font-size: 4rem;
        color: darkslategray;
    }

    .login-form {
        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        width: 28rem;
    }

    .login-form__item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        margin: 0.5rem 0;
    }

    .login-form__label {
        color: darkslategray;
        font-size: 1.5rem;
    }

    .login-form__input {
        height: 2.5rem;
        width: 20rem;
        border: 1px solid lightgray;
        border-radius: 0.5rem;
        padding: 0 1rem;
        font-size: 1rem;
    }

        .login-form__input:focus {
            outline: none;
            box-shadow: 0 0 10px 1px lightgray;
        }

    .login-form__btn {
        margin: 0.5rem 0;
        height: 3rem;
        width: 28rem;
        border-radius: 0.5rem;
        border-style: none;
        background-color: dodgerblue;
        box-shadow: 0 0 10px 4px lightgray;
        font-size: 1.2rem;
        color: white;
    }

        .login-form__btn:hover {
            background-color: forestgreen;
        }
</style>
}

<div class="flex-container">
    <h1 class="flex-container__header">Log In</h1>
    <form class="login-form" asp-controller="Account" asp-action="Verify" method="post" asp-antiforgery="true">
        <div class="login-form__item">
            <lablel class="login-form__label" for="username">Username</lablel>
            <input class="login-form__input" type="text" id="username" name="username" minlength=4 maxlength=12 placeholder="Please enter username" required>
        </div>
        <div class="login-form__item">
            <label class="login-form__label" for="password">Password</label>
            <input class="login-form__input" type="password" id="password" name="password" minlength=4 maxlength=12 placeholder="Please enter password" required>
        </div>
        <div>
            <button class="login-form__btn" type="submit">Log In</button>
        </div>
    </form>
</div>