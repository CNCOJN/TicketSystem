@model IEnumerable<Application.Dtos.RoleDto>;
@{
    ViewData["Title"] = "Register";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/Account/accountregister.css" />
}

<div class="flex-container">
    <h1 class="flex-container__header">Register</h1>
    <form class="register-form" name="register-form" asp-controller="Account" asp-action="VerifyRegistration" method="post">
        <div class="register-form__item">
            <label class="register-form__label" for="name">Name</label>
            <input class="register-form__input" type="text" id="name" name="name" placeholder="Please enter your name" required>
        </div>
        <div class="register-form__item">
            <label class="register-form__label" for="username">Username</label>
            <input class="register-form__input" type="text" id="username" name="username" placeholder="please enter username" minlength=4 maxlength=20 required>
        </div>
        <div class="register-form__item">
            <label class="register-form__label" for="password">Password</label>
            <input class="register-form__input" type="password" id="password" name="password" placeholder="please enter password" minlength=4 maxlength=20 required>
        </div>
        <div class="register-form__item">
            <label class="register-form__label" for="RoleId">Role</label>
            <select class="register-form__input" id="RoleId" name="RoleId" required>
                <option value="" selected>Select Roles</option>
                @foreach (var role in Model)
                {
                    <option value="@role.RoleId">@role.RoleName</option>
                }
            </select>
        </div>
        <div>
            <button class="register-form__btn" type="submit">Register</button>
        </div>
    </form>
</div>